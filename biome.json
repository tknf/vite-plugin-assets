{
	"$schema": "https://biomejs.dev/schemas/2.0.0/schema.json",
	"files": {
		"includes": [
			"src/**/*.ts",
			"./*.ts",
			"*.json",
			"examples/**/*.ts",
			"examples/**/*.tsx"
		],
		"experimentalScannerIgnores": ["dist", "node_modules", "coverage"]
	},
	"vcs": {
		"useIgnoreFile": true
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 100,
		"attributePosition": "auto"
	},
	"assist": {
		"enabled": true,
		"actions": {
			"recommended": true
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"semicolons": "always",
			"trailingCommas": "es5"
		}
	},
	"json": {
		"formatter": { "enabled": false }
	}
}
